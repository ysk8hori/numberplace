{
  "extends": ["config:recommended"],
  "baseBranchPatterns": ["main"],
  "timezone": "Asia/Tokyo",
  "schedule": ["after 5pm and before 10pm on Thursday"],
  "minimumReleaseAge": "7 days",
  "rangeStrategy": "pin",
  "packageRules": [
    {
      "matchUpdateTypes": ["major", "minor"],
      "labels": ["TypeScript"],
      "matchPackageNames": ["typescript"],
      "groupName": "TypeScript"
    },
    {
      "groupName": "React related packages",
      "matchPackageNames": [
        "react",
        "react-dom",
        "@sentry/react",
        "react-icons",
        "react-modal"
      ]
    },
    {
      "groupName": "Vite related packages",
      "matchPackageNames": ["vite", "/^@vitejs/"]
    },
    {
      "groupName": "Storybook related packages",
      "matchPackageNames": ["/^@storybook//"]
    },
    {
      "groupName": "ESLint related packages",
      "matchPackageNames": [
        "eslint",
        "eslint-config-prettier",
        "/^@typescript-eslint//",
        "/^eslint-plugin/"
      ]
    },
    {
      "groupName": "All minore and patch dependencies",
      "matchUpdateTypes": ["minor", "patch"],
      "labels": ["UPDATE-MINOR&PATCH"],
      "matchPackageNames": [
        "!typescript",
        "!react",
        "!react-dom",
        "!@sentry/react",
        "!react-icons",
        "!react-modal",
        "!eslint",
        "!eslint-config-prettier",
        "!/^@storybook//",
        "!/^@typescript-eslint//",
        "!/^eslint-plugin/"
      ]
    }
  ],
  "automerge": true,
  "ignoreDeps": ["styled-components"]
}

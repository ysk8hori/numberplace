{
  "extends": ["config:base"],
  "baseBranches": ["develop"],
  "timezone": "Asia/Tokyo",
  "schedule": ["after 5pm and before 10pm"],
  "packageRules": [
    {
      "matchUpdateTypes": ["major", "minor"],
      "labels": ["TypeScript"],
      "includePackageNames": ["typescript"],
      "groupName": "TypeScript"
    },
    {
      "groupName": "React related packages",
      "packageNames": [
        "react",
        "react-dom",
        "@sentry/react",
        "@tanstack/react-query",
        "react-icons",
        "react-modal"
      ],
      "schedule": ["every day"]
    },
    {
      "groupName": "Storybook related packages",
      "packagePatterns": ["^@storybook/"],
      "schedule": ["every day"]
    },
    {
      "groupName": "Testing related packages",
      "packageNames": ["vitest", "@vitest/ui"],
      "packagePatterns": ["^@testing-library/"],
      "schedule": ["every day"]
    },
    {
      "groupName": "ESLint related packages",
      "packageNames": ["eslint", "eslint-config-prettier"],
      "packagePatterns": ["^@typescript-eslint/", "^eslint-plugin"],
      "schedule": ["every day"]
    },
    {
      "groupName": "Type checking and TS related packages",
      "packageNames": ["typescript"],
      "packagePatterns": ["^@types/"],
      "schedule": ["every day"]
    },
    {
      "groupName": "Other dependencies",
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "packagePatterns": ["^@?[^/]"],
      "excludePackagePatterns": [
        "^react",
        "^@storybook/",
        "^@testing-library/",
        "^eslint",
        "^@typescript-eslint/",
        "^typescript",
        "^@types/"
      ],
      "schedule": ["every day"]
    }
  ]
}
